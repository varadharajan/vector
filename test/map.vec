float square(float x) {
 return x * x;
}

int vec_main()
{
    float inputs[3];
    inputs[0] = float(1.0);
    inputs[1] = float(2.0);
    inputs[2] = float(3.0);

    squares := @map(square, inputs);
    i := 0;

    while (i < 3) {
     printf("%.1f\n", squares[i]);
     i += 1;
    }

    return 0;
}
